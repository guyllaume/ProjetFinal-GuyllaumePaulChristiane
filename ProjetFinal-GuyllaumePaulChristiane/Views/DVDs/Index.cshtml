            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UtilisateurEmprunteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VersionEtendue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisibleATous)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
