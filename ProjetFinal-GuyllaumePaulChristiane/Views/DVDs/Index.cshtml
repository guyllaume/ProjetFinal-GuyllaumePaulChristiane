            <th>
                @Html.DisplayNameFor(model => model.VersionEtendue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisibleATous)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitreFrancais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitreOriginal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneeSortie)
            </td>
