@model ProjetFinal_GuyllaumePaulChristiane.Models.DVD

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutNoLinks.cshtml";
}

<h2>Create DVD</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitreFrancais" class="control-label"></label>
                <input asp-for="TitreFrancais" class="form-control" required />
                <span asp-validation-for="TitreFrancais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitreOriginal" class="control-label"></label>
                <input asp-for="TitreOriginal" class="form-control" />
                <span asp-validation-for="TitreOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnneeSortie" class="control-label"></label>
                <input asp-for="AnneeSortie" class="form-control" />
                <span asp-validation-for="AnneeSortie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorie" class="control-label"></label>
                <select asp-for="Categorie" asp-items="ViewBag.Categories" class="form-control">
                    <option value="">Sélectionnez une catégorie</option>
                </select>
                <span asp-validation-for="Categorie" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DescriptionSupplements" class="control-label"></label>
                <input asp-for="DescriptionSupplements" class="form-control" />
                <span asp-validation-for="DescriptionSupplements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duree" class="control-label"></label>
                <input asp-for="Duree" class="form-control" />
                <span asp-validation-for="Duree" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstOriginal" /> @Html.DisplayNameFor(model => model.EstOriginal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Format" class="control-label"></label>
                <select asp-for="Format" asp-items="ViewBag.Formats" class="form-control">
                    <option value="">Sélectionnez un format</option>
                </select>
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="imagePochette" class="control-label">Image Pochette</label>
                <input name = "imagePochette" type="file" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Langue" class="control-label"></label>
                <select asp-for="Langue" asp-items="ViewBag.Langues" class="form-control">
                    <option value="">Sélectionnez une langue</option>
                </select>
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreDisques" class="control-label"></label>
                <input asp-for="NombreDisques" class="form-control" />
                <span asp-validation-for="NombreDisques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomProducteur" class="control-label"></label>
                <input asp-for="NomProducteur" class="form-control" />
                <span asp-validation-for="NomProducteur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomRealisateur" class="control-label"></label>
                <input asp-for="NomRealisateur" class="form-control" />
                <span asp-validation-for="NomRealisateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomsActeursPrincipaux" class="control-label"></label>
                <input asp-for="NomsActeursPrincipaux" class="form-control" />
                <span asp-validation-for="NomsActeursPrincipaux" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResumeFilm" class="control-label"></label>
                <input asp-for="ResumeFilm" class="form-control" />
                <span asp-validation-for="ResumeFilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SousTitres" class="control-label"></label>
                <select asp-for="SousTitres" asp-items="ViewBag.STitres" class="form-control">
                    <option value="">Sélectionnez un sous-titre</option>
                </select>
                <span asp-validation-for="SousTitres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtilisateurProprietaire" class="control-label"></label>
                <input asp-for="UtilisateurProprietaire" class="form-control text-info" value="@ViewBag.UserName" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="UtilisateurEmprunteur" class="control-label"></label>
                <input asp-for="UtilisateurEmprunteur" class="form-control text-info" value="@ViewBag.UserName" readonly="readonly" />
            </div>
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VersionEtendue" /> @Html.DisplayNameFor(model => model.VersionEtendue)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VisibleATous" /> @Html.DisplayNameFor(model => model.VisibleATous)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
